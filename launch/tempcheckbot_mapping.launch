<launch>
    
    <!-- <node pkg="tf" type="static_transform_publisher" name="link1_broadcaster" args="0.20 0 0 0 0 0 base_link laser 50" /> -->
    
    <arg name="set_base_frame" default="base_footprint"/>
    <arg name="set_odom_frame" default="odom"/>
    <arg name="set_map_frame"  default="map"/>

    <!-- Launch gmapping to publish map -->
    <node pkg="gmapping" type="slam_gmapping" name="tempcheckbot_slam_gmapping" output="log">
        <param name="base_frame" value="$(arg set_base_frame)"/>
        <param name="odom_frame" value="$(arg set_odom_frame)"/>
        <param name="map_frame"  value="$(arg set_map_frame)"/>
        <rosparam command="load" file="$(find turtlebot3_slam)/config/gmapping_params.yaml" />
    </node>

    <!-- Save the map -->
    <arg name="map_file" value="$(find tempcheckbot)/maps/map" />
    <node name="map_saver" pkg="map_server" type="map_saver" args="-f $(arg map_file)" respawn="true" respawn_delay="5" />
    
</launch>